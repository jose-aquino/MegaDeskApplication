@page 
@model MegaDeskApplication.Pages.Movies.IndexModel



@{
    ViewData["Title"] = "Index";
}

<h1>Search Quotes</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form>
    <p>
        Customer Name: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Movie[0].CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie[0].QuoteDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie[0].QuotePrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie[0].Delivery)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie[0].DesktopMaterial)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Movie)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuoteDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuotePrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Delivery)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DesktopMaterial)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
